{
  "name": "cdi",
  "version": "1.0.5",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --publish never",
    "deploy": "electron-builder build --publish onTag",
    "alldeploy": "electron-builder build -mwl --publish onTag"
  },
  "author": "",
  "license": "MIT", 
  "devDependencies": {
    "electron": "^16.0.5",
    "electron-builder": "^22.14.5"
  },
  "dependencies": {
    "electron-updater": "^4.6.1",
    "spectron": "^15.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smartwe/CDI"
  },
  "build": {
    "productName": "CDI",
    "appId": "com.smartwe.cdi",
    "asar": false, 
    "protocols" : {
        "name" : "CDI",
        "schemes" : ["CDI"]
    },
    "mac": { 
      "target": [
        "default"
      ],
      "icon": "./icon/cdi.icns"
    },
    "dmg": { 
      "title": "CDI",
      "icon": "./icon/cdi.icns"
    },
    "win": {  
      "target": [  
        "zip",  
        "nsis"  
      ],
      "icon": "./icon/cdi.icns"
    },
    "linux": {
      "target": [
        "AppImage", 
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ],
      "icon": "./icon/cdi.icns"
    },
    "nsis":{
      "oneClick" : false,
      "allowToChangeInstallationDirectory" :true 
    }
  }
}
